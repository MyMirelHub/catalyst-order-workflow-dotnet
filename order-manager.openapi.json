{
  "openapi": "3.0.1",
  "info": {
    "title": "Diagrid.Labs.Catalyst.OrderWorkflow.OrderManager | v1",
    "version": "1.0.0"
  },
  "servers": [
    {
      "url": "http://localhost:8081/"
    }
  ],
  "paths": {
    "/promotion": {
      "post": {
        "tags": [
          "WorkerEndpointExtensions"
        ],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/SendPromotionRequest"
              }
            }
          },
          "required": true
        },
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/SendPromotionResult"
                }
              }
            }
          }
        }
      }
    },
    "/inventory/search": {
      "post": {
        "tags": [
          "WorkerEndpointExtensions"
        ],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/SearchInventoryRequest"
              }
            }
          },
          "required": true
        },
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/InventorySearchResult"
                }
              }
            }
          }
        }
      }
    },
    "/inventory/{productId}": {
      "get": {
        "tags": [
          "WorkerEndpointExtensions"
        ],
        "parameters": [
          {
            "name": "productId",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Product"
                }
              }
            }
          },
          "404": {
            "description": "Not Found"
          }
        }
      }
    },
    "/order": {
      "post": {
        "tags": [
          "WorkerEndpointExtensions"
        ],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/CreateOrderRequest"
              }
            }
          },
          "required": true
        },
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/CreateOrderResult"
                }
              }
            }
          }
        }
      }
    },
    "/order/{orderId}": {
      "get": {
        "tags": [
          "WorkerEndpointExtensions"
        ],
        "parameters": [
          {
            "name": "orderId",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ShowOrderResult"
                }
              }
            }
          },
          "404": {
            "description": "Not Found"
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "CreateOrderRequest": {
        "required": [
          "orderId",
          "customerId",
          "items"
        ],
        "type": "object",
        "properties": {
          "orderId": {
            "type": "string",
            "nullable": true
          },
          "customerId": {
            "type": "string"
          },
          "items": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/OrderItem"
            }
          }
        }
      },
      "CreateOrderResult": {
        "required": [
          "orderId",
          "message",
          "workflowInstanceId"
        ],
        "type": "object",
        "properties": {
          "orderId": {
            "type": "string"
          },
          "message": {
            "type": "string"
          },
          "workflowInstanceId": {
            "type": "string"
          }
        }
      },
      "InventoryItem": {
        "required": [
          "productId",
          "quantity"
        ],
        "type": "object",
        "properties": {
          "productId": {
            "type": "string"
          },
          "quantity": {
            "type": "integer",
            "format": "int32"
          }
        }
      },
      "InventorySearchResult": {
        "type": "object",
        "properties": {
          "statuses": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/ItemStatus"
            }
          }
        }
      },
      "ItemStatus": {
        "required": [
          "productId",
          "quantity"
        ],
        "type": "object",
        "properties": {
          "productId": {
            "type": "string"
          },
          "quantity": {
            "type": "integer",
            "format": "int32"
          }
        }
      },
      "OrderItem": {
        "required": [
          "productId",
          "quantity",
          "price"
        ],
        "type": "object",
        "properties": {
          "productId": {
            "type": "string"
          },
          "quantity": {
            "type": "integer",
            "format": "int32"
          },
          "price": {
            "type": "number",
            "format": "double"
          }
        }
      },
      "Product": {
        "required": [
          "productId",
          "quantity",
          "lastUpdated"
        ],
        "type": "object",
        "properties": {
          "productId": {
            "type": "string"
          },
          "quantity": {
            "type": "integer",
            "format": "int32"
          },
          "lastUpdated": {
            "type": "string",
            "format": "date-time"
          }
        }
      },
      "SearchInventoryRequest": {
        "required": [
          "items"
        ],
        "type": "object",
        "properties": {
          "items": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/InventoryItem"
            }
          }
        }
      },
      "SendPromotionRequest": {
        "required": [
          "promotionType",
          "message",
          "targetAudience"
        ],
        "type": "object",
        "properties": {
          "promotionType": {
            "type": "string"
          },
          "message": {
            "type": "string"
          },
          "targetAudience": {
            "type": "string"
          }
        }
      },
      "SendPromotionResult": {
        "required": [
          "id"
        ],
        "type": "object",
        "properties": {
          "id": {
            "type": "string"
          }
        }
      },
      "ShowOrderResult": {
        "required": [
          "orderId",
          "status",
          "state"
        ],
        "type": "object",
        "properties": {
          "orderId": {
            "type": "string"
          },
          "status": {
            "type": "string"
          },
          "state": {
            "$ref": "#/components/schemas/WorkflowState"
          }
        }
      },
      "WorkflowRuntimeStatus": {
        "type": "integer"
      },
      "WorkflowState": {
        "type": "object",
        "properties": {
          "exists": {
            "type": "boolean"
          },
          "isWorkflowRunning": {
            "type": "boolean"
          },
          "isWorkflowCompleted": {
            "type": "boolean"
          },
          "createdAt": {
            "type": "string",
            "format": "date-time"
          },
          "lastUpdatedAt": {
            "type": "string",
            "format": "date-time"
          },
          "runtimeStatus": {
            "$ref": "#/components/schemas/WorkflowRuntimeStatus"
          },
          "failureDetails": {
            "$ref": "#/components/schemas/WorkflowTaskFailureDetails"
          }
        }
      },
      "WorkflowTaskFailureDetails": {
        "type": "object",
        "properties": {
          "errorType": {
            "type": "string",
            "nullable": true
          },
          "errorMessage": {
            "type": "string",
            "nullable": true
          },
          "stackTrace": {
            "type": "string",
            "nullable": true
          }
        },
        "nullable": true
      }
    }
  },
  "tags": [
    {
      "name": "WorkerEndpointExtensions"
    }
  ]
}